# SAT-Digital Backend Environment Configuration

# ===== APPLICATION SETTINGS =====
NODE_ENV=development
PORT=3001
APP_VERSION=1.0.0

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sat_digital
DB_USER=root
DB_PASS=

# ===== JWT CONFIGURATION =====
JWT_SECRET=sat_digital_super_secret_key_2025_change_in_production
JWT_REFRESH_SECRET=sat_digital_refresh_secret_key_2025_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===== CORS CONFIGURATION =====
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== EMAIL CONFIGURATION =====
# SMTP Settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=SAT-Digital <noreply@satdigital.com>

# Email support contact
EMAIL_SOPORTE=soporte@satdigital.com

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=http://localhost:3000

# ===== REDIS CONFIGURATION (for Bull/Agenda queues) =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== FILE UPLOAD SETTINGS =====
MAX_FILE_SIZE=200000000
UPLOAD_PATH=./uploads
TEMP_DIR=./temp

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=./logs/sat-digital.log

# ===== WEBSOCKET SETTINGS =====
WEBSOCKET_ENABLED=true
MAX_WEBSOCKET_CONNECTIONS=100

# ===== NOTIFICATION SETTINGS =====
# Email notification timing
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_DELAY_MS=2000

# Cron job schedules (cron format)
CRON_DAILY_REMINDERS=0 9 * * *
CRON_AUDITOR_SUMMARIES=0 8 * * 1-5
CRON_CHECK_DEADLINES=0 */4 * * *

# Time zone for scheduled jobs
TIMEZONE=America/Argentina/Buenos_Aires

# ===== SECURITY HEADERS =====
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ===== DEVELOPMENT SETTINGS =====
# Only for development environment
SWAGGER_ENABLED=true
DEBUG_MODE=true
MOCK_EMAIL_PREVIEW=true
