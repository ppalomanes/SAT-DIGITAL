{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/database/migrations/**",
    "!src/database/seeders/**",
    "!src/shared/scripts/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "json"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "testTimeout": 10000,
  "verbose": true,
  "clearMocks": true,
  "restoreMocks": true,
  "moduleFileExtensions": ["js", "json"],
  "transform": {
    "^.+\\.js$": "babel-jest"
  }
}
